@model StudentModel
@{
    ViewData["Title"] = "AddNewStudent";
}

<div class="container">
    @if (ViewBag.IsSuccess == true)
    {
        <div class="alert alert-success alert-dismissible fade show" role="alert">
            <strong>Success!</strong> Your Record Has been Addedd successfully and commit test.
            <button type="button" class="close" data-dismiss="alert" aria-label="Close">
                <span aria-hidden="true">&times;</span>
            </button>
        </div>
    }
    <img class="float-lg-left float-md-left float-sm-none col-6" src="~/Images/school.jpg"/>
    <form class="float-md-right float-lg-right float-sm-none col-sm-12 col-md-6 col-lg-6" enctype="multipart/form-data" method="post" asp-controller="Student" asp-action="AddNewStudent">
        <div class="form-group">
            <label asp-for="Name"></label>
            <input asp-for="Name" class="form-control" />
            <span asp-validation-for="Name" class="text-danger"></span>
        </div>
        <div class="form-group">
            <label asp-for="Roll"></label>
            <input asp-for="Roll" class="form-control" />
            <span asp-validation-for="Roll" class="text-danger"></span>
        </div>
        <div class="form-group">
            <label asp-for="Group"></label>
            <input asp-for="Group" class="form-control" />
            <span asp-validation-for="Group" class="text-danger"></span>
        </div>

        <div class="form-group">
            <label asp-for="ProfileImage">Profile Image</label>
            <div class="custom-file">
                <input asp-for="ProfileImage" class="custom-file-input" id="customFile">
                <label class="custom-file-label" for="customFile">Choose file</label>
                <span asp-validation-for="ProfileImage" class="text-danger"></span>
            </div>
        </div>
        <div class="form-group">
            <input class="btn btn-outline-primary" value="Add New Student" type="submit" />
        </div>

    </form>
</div>

